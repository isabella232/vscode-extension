{
    "name": "zeplin",
    "displayName": "Zeplin",
    "publisher": "Zeplin",
    "description": "Zeplinâ€™s official Visual Studio Code extension to connect your components to their design counterparts",
    "icon": "resources/icon-zeplin.png",
    "version": "1.1.0",
    "galleryBanner": {
        "color": "#F7F7F7",
        "theme": "light"
    },
    "categories": [
        "Snippets",
        "Formatters",
        "Other"
    ],
    "keywords": [
        "zeplin",
        "connected components",
        "design system",
        "design"
    ],
    "engines": {
        "vscode": "^1.33.0"
    },
    "license": "SEE LICENSE IN LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/zeplin/vscode-extension"
    },
    "homepage": "https://github.com/zeplin/vscode-extension#readme",
    "bugs": "https://github.com/zeplin/vscode-extension/issues",
    "activationEvents": [
        "*"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "zeplin",
                    "title": "Zeplin",
                    "icon": "resources/icon-sidebar.svg"
                }
            ]
        },
        "views": {
            "zeplin": [
                {
                    "id": "zeplin.views.barrels",
                    "name": "Projects and Styleguides"
                },
                {
                    "id": "zeplin.views.pinned",
                    "name": "Pinned"
                },
                {
                    "id": "zeplin.views.activity",
                    "name": "Activity"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "zeplin.views.barrels",
                "contents": "You are not logged in\n[Connect Zeplin account](command:zeplin.login)\n[Connect with token](command:zeplin.manualLogin)",
                "when": "!zeplin:loggedIn"
            },
            {
                "view": "zeplin.views.barrels",
                "contents": "No projects or styleguides added\n[Add project](command:zeplin.sidebar.addProject)\n[Add styleguide](command:zeplin.sidebar.addStyleguide)",
                "when": "zeplin:loggedIn"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "zeplin.sidebar.refresh",
                    "when": "view == zeplin.views.barrels || view == zeplin.views.activity",
                    "group": "navigation"
                },
                {
                    "command": "zeplin.sidebar.addProject",
                    "when": "view == zeplin.views.barrels"
                },
                {
                    "command": "zeplin.sidebar.addStyleguide",
                    "when": "view == zeplin.views.barrels"
                },
                {
                    "command": "zeplin.sidebar.pinScreen",
                    "when": "view == zeplin.views.pinned",
                    "group": "zeplin.sidebar.pinned_1@1"
                },
                {
                    "command": "zeplin.sidebar.pinComponent",
                    "when": "view == zeplin.views.pinned",
                    "group": "zeplin.sidebar.pinned_1@2"
                },
                {
                    "command": "zeplin.sidebar.unpinAll",
                    "when": "view == zeplin.views.pinned && zeplin:sidebar:anyPinnedItems",
                    "group": "zeplin.sidebar.pinned_2"
                }
            ],
            "view/item/context": [
                {
                    "command": "zeplin.sidebar.removeBarrel",
                    "when": "view == zeplin.views.barrels && viewItem =~ /\\bbarrel\\b/"
                },
                {
                    "command": "zeplin.sidebar.openJiraLink",
                    "when": "viewItem =~ /\\bjira\\b/",
                    "group": "inline@1"
                },
                {
                    "command": "zeplin.sidebar.openInZeplin",
                    "when": "viewItem =~ /\\bzeplinLink\\b/",
                    "group": "inline@2"
                },
                {
                    "command": "zeplin.sidebar.pinItem",
                    "when": "view == zeplin.views.barrels && viewItem =~ /\\bpinnable\\b/",
                    "group": "inline@3"
                },
                {
                    "command": "zeplin.sidebar.unpinItem",
                    "when": "viewItem =~ /\\bpinned\\b/",
                    "group": "inline@3"
                }
            ],
            "commandPalette": [
                {
                    "command": "zeplin.sidebar.refresh",
                    "when": "false"
                },
                {
                    "command": "zeplin.sidebar.addProject",
                    "when": "false"
                },
                {
                    "command": "zeplin.sidebar.addStyleguide",
                    "when": "false"
                },
                {
                    "command": "zeplin.sidebar.removeBarrel",
                    "when": "false"
                },
                {
                    "command": "zeplin.sidebar.addBarrel",
                    "when": "false"
                },
                {
                    "command": "zeplin.sidebar.openJiraLink",
                    "when": "false"
                },
                {
                    "command": "zeplin.sidebar.openInZeplin",
                    "when": "false"
                },
                {
                    "command": "zeplin.sidebar.pinItem",
                    "when": "false"
                },
                {
                    "command": "zeplin.sidebar.unpinItem",
                    "when": "false"
                },
                {
                    "command": "zeplin.sidebar.pinScreen",
                    "when": "false"
                },
                {
                    "command": "zeplin.sidebar.pinComponent",
                    "when": "false"
                },
                {
                    "command": "zeplin.sidebar.unpinAll",
                    "when": "false"
                }
            ]
        },
        "keybindings": [
            {
                "command": "zeplin.sidebar.jumpTo",
                "key": "ctrl+k j",
                "mac": "cmd+k j"
            },
            {
                "command": "workbench.view.extension.zeplin",
                "key": "ctrl+k z",
                "mac": "cmd+k z"
            }
        ],
        "commands": [
            {
                "command": "zeplin.sidebar.refresh",
                "title": "Refresh",
                "category": "Zeplin",
                "icon": "$(refresh)"
            },
            {
                "command": "zeplin.sidebar.addProject",
                "title": "Add project",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.sidebar.addStyleguide",
                "title": "Add styleguide",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.sidebar.removeBarrel",
                "title": "Remove",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.sidebar.jumpTo",
                "title": "Jump to screen or component",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.sidebar.addBarrel",
                "title": "Add another project/styleguide",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.sidebar.openInZeplin",
                "title": "Open in Zeplin",
                "category": "Zeplin",
                "icon": "$(link-external)"
            },
            {
                "command": "zeplin.sidebar.openJiraLink",
                "title": "Open JIRA Link",
                "category": "Zeplin",
                "icon": {
                    "dark": "resources/dark/icon-jira.svg",
                    "light": "resources/light/icon-jira.svg"
                }
            },
            {
                "command": "zeplin.sidebar.pinItem",
                "title": "Pin",
                "category": "Zeplin",
                "icon": "$(pin)"
            },
            {
                "command": "zeplin.sidebar.unpinItem",
                "title": "Unpin",
                "category": "Zeplin",
                "icon": "$(pinned)"
            },
            {
                "command": "zeplin.sidebar.pinScreen",
                "title": "Add screen",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.sidebar.pinComponent",
                "title": "Add component",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.sidebar.unpinAll",
                "title": "Remove all",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.createConfig",
                "title": "Create Zeplin Configuration File",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.openConfig",
                "title": "Open Zeplin Configuration File",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.login",
                "title": "Login to Zeplin",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.manualLogin",
                "title": "Authenticate to Zeplin with Token",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.logout",
                "title": "Log Out from Zeplin",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.clearCache",
                "title": "Clear cache",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.addProject",
                "title": "Add Project to Zeplin Configuration",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.addStyleguide",
                "title": "Add Styleguide to Zeplin Configuration",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.addComponent",
                "title": "Add Component to Zeplin Configuration",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.addMultipleComponents",
                "title": "Add Multiple Components to Zeplin Configuration",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.addZeplinComponent",
                "title": "Connect Zeplin Component to Component in Configuration",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.addMultipleZeplinComponents",
                "title": "Connect Multiple Zeplin Components to Component in Configuration",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.addGithub",
                "title": "Add GitHub Repository to Zeplin Configuration",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.addGitlab",
                "title": "Add GitLab Repository to Zeplin Configuration",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.addBitbucket",
                "title": "Add Bitbucket Repository to Zeplin Configuration",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.addPlugin",
                "title": "Add Plugin to Zeplin Configuration",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.addLink",
                "title": "Add Custom Link to Zeplin Configuration",
                "category": "Zeplin"
            },
            {
                "command": "zeplin.saveLogs",
                "title": "Save Logs",
                "category": "Zeplin"
            }
        ],
        "configuration": {
            "title": "Zeplin",
            "properties": {
                "zeplin.preferredApplicationType": {
                    "type": "string",
                    "default": "Web",
                    "enum": ["Web", "App"],
                    "enumDescriptions": ["Open in Web App", "Open in Native App"],
                    "markdownDescription": "Preferred application type to open items in Zeplin",
                    "scope": "resource"
                },
                "zeplin.connectedComponents.ignoredExtensions": {
                    "type": "array",
                    "uniqueItems": true,
                    "default": [
                        "html",
                        "css",
                        "scss",
                        "less",
                        "json",
                        "md",
                        "txt",
                        "yml",
                        "jpg",
                        "jpeg",
                        "png",
                        "gif",
                        "webp",
                        "tiff",
                        "tif",
                        "psd",
                        "svg",
                        "pdf",
                        "ico",
                        "ttf",
                        "woff",
                        "woff2",
                        "otf",
                        "eof"
                    ],
                    "items": {
                        "type": "string"
                    },
                    "markdownDescription": "Specifies ignored file extensions for `Add Component to Zeplin Configuration` Command",
                    "scope": "resource"
                },
                "zeplin.connectedComponents.ignoredFiles": {
                    "type": "array",
                    "uniqueItems": true,
                    "default": [],
                    "items": {
                        "type": "string"
                    },
                    "markdownDescription": "Specifies ignored files with exact relative path for `Add Component to Zeplin Configuration` Command",
                    "scope": "resource"
                },
                "zeplin.connectedComponents.ignoredPathsStartWith": {
                    "type": "array",
                    "uniqueItems": true,
                    "default": [
                        "node_modules",
                        "."
                    ],
                    "items": {
                        "type": "string"
                    },
                    "markdownDescription": "Specifies ignored files with relative paths that start with one of given strings for `Add Component to Zeplin Configuration` Command",
                    "scope": "resource"
                },
                "zeplin.connectedComponents.ignoredPathsInclude": {
                    "type": "array",
                    "uniqueItems": true,
                    "default": [
                        "/."
                    ],
                    "items": {
                        "type": "string"
                    },
                    "markdownDescription": "Specifies ignored files with relative paths that contain one of given strings for `Add Component to Zeplin Configuration` Command",
                    "scope": "resource"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "compile": "NODE_ENV=test webpack --mode development",
        "watch": "NODE_ENV=test webpack --mode development --watch",
        "test-compile": "tsc -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js",
        "lint": "eslint --ext .js,.ts ."
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/keytar": "^4.4.2",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.17.12",
        "@types/node-fetch": "^2.5.4",
        "@types/vscode": "^1.33.0",
        "@typescript-eslint/eslint-plugin": "^2.13.0",
        "@typescript-eslint/parser": "^2.13.0",
        "@zeplin/eslint-config": "^2.2.0",
        "eslint": "^6.8.0",
        "eslint-import-resolver-typescript": "^1.1.1",
        "glob": "^7.1.6",
        "husky": "^3.1.0",
        "mocha": "^6.2.2",
        "node-loader": "^0.6.0",
        "ts-loader": "^6.2.1",
        "typescript": "^3.7.4",
        "vscode-test": "^1.3.0",
        "webpack": "^4.41.4",
        "webpack-cli": "^3.3.10"
    },
    "dependencies": {
        "abort-controller": "3.0.0",
        "image-size": "0.8.3",
        "node-fetch": "^2.6.0"
    }
}
